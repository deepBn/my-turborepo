{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "ES2017",
    "strict": false,
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "jsxImportSource": "nativewind",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "nativewind-env.d.ts",
    "tailwind-variants.d.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    ".turbo"
  ]
}